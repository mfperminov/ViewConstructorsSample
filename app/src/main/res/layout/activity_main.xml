<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <xyz.mperminov.viewconstructorssample.CustomView
        android:id="@+id/customView"
        app:exampleString="@string/parent"
        app:exampleColor="@color/purple_500"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <xyz.mperminov.viewconstructorssample.ChildCustomView
        android:id="@+id/childCustomView"
        app:exampleString="@string/child"
        app:exampleColor="@color/rose"
        android:layout_marginTop="32dp"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

</LinearLayout>